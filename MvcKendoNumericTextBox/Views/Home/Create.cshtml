@model MvcKendoNumericTextBox.Models.Person
@{
    ViewBag.Title = "Index";
    Html.EnableClientValidation(true);
}

<h2>Index</h2>

@using (Html.BeginForm("Create", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" })) 
{ 
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Age, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <div style="display:block">
                @Html.EditorFor(m => m.Age, new { htmlAttributes = new { @class = "" } })
            </div>
            @Html.ValidationMessageFor(m => m.Age, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Submit" />
        </div>
    </div>
}

@section scripts {

    <script>

        $(function () {

            $("#Age").kendoNumericTextBox();
        });

    </script>

}